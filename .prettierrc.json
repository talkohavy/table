{
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "bracketSameLine": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "printWidth": 120,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "off",
  "quoteProps": "as-needed",
  "overrides": [
    {
      "files": ["*.mts", "*.cts", "*.ts", "*.d.ts", "*.js", "*.jsx"],
      "options": { "parser": "typescript" }
    },
    {
      "files": ["*.json"],
      "options": { "parser": "json" }
    }
  ]
}
